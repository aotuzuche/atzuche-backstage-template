{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "*": ["*", "src/*"],
      "src/*": ["src/*"],
      "@/*": ["src/*"],
      "$assets/*": ["src/assets/*"],
      "$components/*": ["src/components/*"],
      "$views/*": ["src/views/*"],
      "$utils/*": ["src/utils/*"]
    },
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node"
  },
  "exclude": ["node_modules"]
}
